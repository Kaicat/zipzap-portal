{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 4],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "prefer-const": true,
    "semicolon":[true, "always", "ignore-interfaces"],
    "trailing-comma": [true, {
      "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
      },
      "esSpecCompliant": true
    }],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
    ],
    // 禁止行尾有空格
    "no-trailing-whitespace": true,
    // 禁止无用的表达式
    "no-unused-expression": true
  }
  
}
